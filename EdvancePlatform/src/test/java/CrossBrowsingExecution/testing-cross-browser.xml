<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="ParallelSuite" parallel="tests" thread-count="2">

<!--    This file work as a test suite to run all the tests from all the defined test classes in it-->
<!--    and make cross browsing according to the name of the browser passed as a parameter on it.-->
<!--    This file runs by right click on it and choose play-->


    <!--    Cross browsing Execution for UniversityStudentProfileTest from both Chrome and Edge-->
    <test name="UniversityStudentProfileTestChrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="PagesTests.UniversityStudentProfileTest"/>
        </classes>
    </test>
    <test name="UniversityStudentProfileTestEdge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="PagesTests.UniversityStudentProfileTest"/>
        </classes>
    </test>


